<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-purple py-0">
            <div class="container-fluid my-3">
                <a class="navbar-brand" href="#">Apple Store</a>
                <div id="navbarSupportedContent" class="d-flex justify-content-end align-items-center">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">
                    @if (Context.Session.GetString("Username") != null)
                    {
                               <li class="d-flex align-items-center px-3" style="cursor: pointer">
								<a asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i></a>
							</li>
							
                            <li>
                                    <div class="d-flex align-items-center" style="cursor: pointer">
                                        <i class="fa fa-user"></i>
									<span class="nav-link text-black me-3">
										Xin chào, @Context.Session.GetString("Username")
									</span>
								</div>
                            </li>
                                <li class="d-flex align-items-center">
                                    <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-sm" style="cursor: pointer">
									Đăng xuất
								</a>
                            </li>
                        
                        }
                        else
                        {
                            <button type="button" class="btn btn-dark">
                                <a asp-controller="Account" asp-action="Login" class="nav-link text-white">Đăng nhập</a>
                            </button>
                        }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

    </header>
        <main role="main">
            @RenderBody()
        </main>

    <footer class="bg-dark text-light py-3">
        <div class="container text-center">
            <p class="mb-2">© 2025 Apple Store. All rights reserved.</p>
            <div class="d-flex justify-content-center">
                <a href="#" class="text-light mx-3">
                    <i class="fab fa-facebook-f"></i>
                </a> <a href="#" class="text-light mx-3">
                    <i class="fab fa-twitter"></i>
                </a> <a href="#" class="text-light mx-3">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
        </div>
    </footer>
    <style>
        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script>
        function updateCardInfo(card) {
            const imgSrc = card.querySelector('.card-img-top').src;
            const productName = imgSrc.split('/').pop().split('_')[1].replace(/-/g, ' ').replace('.png', '').replace('.jpeg', '');
            const productDescription = 'Mô tả ' + productName;

            card.querySelector('.card-title').textContent = productName;
            card.querySelector('.card-text').textContent = productDescription;
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
