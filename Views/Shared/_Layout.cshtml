    <style>
        .product-name {
            display: -webkit-box;
            -webkit-line-clamp: 2; /* Hiển thị tối đa 2 dòng */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            font-size: 14px; /* Đặt kích thước font hợp lý */
            height: 40px; /* Giới hạn chiều cao */
            line-height: 20px; /* Điều chỉnh chiều cao dòng */
            margin: 10px 0; /* Tạo khoảng cách giữa tên và giá */
        }
        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }

        .fade-in {
            opacity: 0;
            transition: opacity 1s ease-out;
        }

            .fade-in.visible {
                opacity: 1;
            }
    </style>
