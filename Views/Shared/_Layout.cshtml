<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="bg-light">
            <div class="container">
                <ul class="d-flex justify-content-end align-items-center list-unstyled m-0">
                    @if (Context.Session.GetString("Username") != null)
                    {
                        <li class="d-flex align-items-center px-3">
                            <a asp-action="Index" asp-controller="Cart" class="text-dark" style="cursor: pointer;">
                                <i class="fa fa-shopping-cart"></i>
                            </a>
                        </li>

                        <li class="d-flex align-items-center px-3">
                            <i class="fa fa-user me-2"></i>
                            <span class="nav-link text-dark">
                                Xin chào, @Context.Session.GetString("Username")
                            </span>
                        </li>

                        <li class="d-flex align-items-center px-3">
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-sm">
                                Đăng xuất
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="d-flex align-items-center px-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                                Đăng nhập
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <nav style="background-color: #ffd700;">
        <div class="container d-flex justify-content-between">
			<div class="my-2">
				<ul class="nav">
					<li class="nav-item"><a class="nav-link text-black text-decoration-none" asp-controller="Home" asp-action="Index">TRANG CHỦ</a></li>
					<li class="nav-item"><a class="nav-link text-black text-decoration-none" asp-controller="Product" asp-action="Index"> SẢN PHẨM</a></li>
					<li class="nav-item"><a class="nav-link text-black text-decoration-none" href="#">VỀ CHÚNG TÔI</a></li>
					<li class="nav-item"><a class="nav-link text-black text-decoration-none" href="#">LIÊN HỆ</a></li>
				</ul>
			</div>
            <div class="my-2" style="width: 450px">
				<form class="d-flex" action="/Home/Search" method="get">
					<input class="form-control me-2" name="keyword" type="search" placeholder="Tìm kiếm ..." aria-label="Search">
					<button class="btn btn-outline-success" type="submit">
						<i class="fa-solid fa-magnifying-glass"></i>
					</button>
				</form>
			</div>
		</div>
    </nav>
        <main role="main" class="container">
            @RenderBody()
        </main>

    <footer class="bg-dark text-light py-3">
        <div class="container text-center">
            <p class="mb-2">© 2025 Apple Store. All rights reserved.</p>
            <div class="d-flex justify-content-center">
                <a href="#" class="text-light mx-3">
                    <i class="fab fa-facebook-f"></i>
                </a> <a href="#" class="text-light mx-3">
                    <i class="fab fa-twitter"></i>
                </a> <a href="#" class="text-light mx-3">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
        </div>
    </footer>
    <style>
        .card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script>
        function updateCardInfo(card) {
            const imgSrc = card.querySelector('.card-img-top').src;
            const productName = imgSrc.split('/').pop().split('_')[1].replace(/-/g, ' ').replace('.png', '').replace('.jpeg', '');
            const productDescription = 'Mô tả ' + productName;

            card.querySelector('.card-title').textContent = productName;
            card.querySelector('.card-text').textContent = productDescription;
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
