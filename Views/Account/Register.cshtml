@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Register image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form method="post" asp-action="Register">
                        <div class="form-floating mb-3">
                            <input type="text" name="username" id="username" class="form-control" placeholder="Tài khoản">
                            <label for="username">Tài khoản</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" name="fullname" id="fullname" class="form-control" placeholder="Họ và tên">
                            <label for="fullname">Họ và tên</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                            <label for="email">Email</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password"
                                   class="form-control"
                                   name="password"
                                   id="password"
                                   placeholder="Mật khẩu"
                                   minlength="6"
                                   required>
                            <label for="password">Mật khẩu</label>
                            <div class="invalid-feedback">Mật khẩu phải có ít nhất 6 ký tự.</div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password"
                                   class="form-control"
                                   name="confirmPassword"
                                   id="confirmPassword"
                                   placeholder="Xác nhận mật khẩu"
                                   minlength="6"
                                   required>
                            <label for="confirmPassword">Xác nhận mật khẩu</label>
                            <div class="invalid-feedback">Mật khẩu xác nhận phải khớp.</div>
                        </div>

                        <div class="w-100 d-flex justify-content-center">
                            <button type="submit" class="btn btn-dark btn-lg btn-block">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
