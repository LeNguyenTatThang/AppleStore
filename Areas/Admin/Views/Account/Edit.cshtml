@model AppleStore.Models.Account

<div class="container mt-4">
    <h2 class="text-center mb-4">Chỉnh sửa tài khoản</h2>

    <form method="post" asp-action="Edit">
        <input type="hidden" name="AccountId" value="@Model.AccountId" />

        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="Username" value="@Model.Username" placeholder="Tên tài khoản" required>
            <label for="Username">Tên tài khoản</label>
        </div>

        <div class="form-floating mb-3">
            <input type="email" class="form-control" name="Email" value="@Model.Email" placeholder="Email" required>
            <label for="Email">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="FullName" value="@Model.FullName" placeholder="Họ và tên">
            <label for="FullName">Họ và tên</label>
        </div>

        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Số điện thoại">
            <label for="PhoneNumber">Số điện thoại</label>
        </div>

        <div class="form-floating mb-3" style="cursor: not-allowed;">
            <input type="text" class="form-control" name="Role" value="@Model.Role" placeholder="Vai trò" disabled>
            <label for="Role">Vai trò</label>
        </div>

        <div class="form-floating mb-3">
            <select class="form-select" name="Status" required>
                <option value="Active" selected="@(Model.Status == "Active" ? "selected" : null)">Hoạt động</option>
                <option value="Inactive" selected="@(Model.Status == "Inactive" ? "selected" : null)">Không hoạt động</option>
            </select>

            <label for="Status">Trạng thái</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" class="form-control" name="Password" value="@Model.Password" placeholder="Mật khẩu mới">
            <label for="Password">Mật khẩu mới</label>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Lưu thay đổi</button>
        </div>
    </form>

    <div class="mt-3">
        <a href="Admin/Account/Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
