@{
    ViewData["Title"] = "Tạo tài khoản quản lý";
}

<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container py-5">
        <div class="card shadow-lg rounded-4 p-4" style="max-width: 600px; margin: auto;">
            <h2 class="text-center mb-4">Tạo tài khoản quản lý</h2>

            <form method="post" asp-action="Create">
                <div class="form-floating mb-3">
                    <input type="text" name="username" id="username" class="form-control" placeholder="Tài khoản" required>
                    <label for="username">Tài khoản</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" name="fullname" id="fullname" class="form-control" placeholder="Họ và tên" required>
                    <label for="fullname">Họ và tên</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                    <label for="email">Email</label>
                </div>

                <div class="d-flex gap-3">
                    <div class="form-floating mb-3 w-50">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu" minlength="6" required>
                        <label for="password">Mật khẩu</label>
                        <div class="invalid-feedback">Mật khẩu phải có ít nhất 6 ký tự.</div>
                    </div>

                    <div class="form-floating mb-3 w-50">
                        <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Xác nhận mật khẩu" minlength="6" required>
                        <label for="confirmPassword">Xác nhận mật khẩu</label>
                        <div class="invalid-feedback">Mật khẩu xác nhận phải khớp.</div>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark btn-lg rounded-pill">Tạo tài khoản</button>
                </div>
            </form>
        </div>
    </div>

    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div id="toast-body" class="toast-body"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
</section>

<script>
    window.onload = function() {
        var successMessage = '@TempData["success"]';
        var errorMessage = '@TempData["error"]';

        var toastBody = document.getElementById('toast-body');
        var toastElement = document.getElementById('liveToast');

        if (successMessage) {
            toastBody.innerHTML = successMessage;
            toastElement.classList.add('bg-success');
            var toast = new bootstrap.Toast(toastElement);
            toast.show();
        } else if (errorMessage) {
            toastBody.innerHTML = errorMessage;
            toastElement.classList.add('bg-danger');
            var toast = new bootstrap.Toast(toastElement);
            toast.show();
        }
    }
</script>