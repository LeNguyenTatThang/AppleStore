
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- App favicon -->
    <link rel="shortcut icon" href="@Url.Content("~/images/favicon.ico")">
    <link href="~/libs/quill/quill.core.css" rel="stylesheet" type="text/css" />
    <link href="~/libs/quill/quill.bubble.css" rel="stylesheet" type="text/css" />
    <link href="~/libs/quill/quill.snow.css" rel="stylesheet" type="text/css" />
    <!-- jsvectormap css -->
    <link href="@Url.Content("~/libs/jsvectormap/css/jsvectormap.min.css")" rel="stylesheet" type="text/css" />

    <!--Swiper slider css-->
    <link href="@Url.Content("~/libs/swiper/swiper-bundle.min.css")" rel="stylesheet" type="text/css" />

    <!-- Layout config Js -->
    <script src="@Url.Content("~/js/layout.js")"></script>
    <!-- Bootstrap Css -->
    <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="@Url.Content("~/css/icons.min.css")" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="@Url.Content("~/css/app.min.css")" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="@Url.Content("~/css/custom.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/customscreen.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/js/jquery-3.6.3.min.js")"></script>
</head>
<body>
    <!-- Begin page -->
    <div id="layout-wrapper">
        <header id="page-topbar">
            <div class="layout-width">
                <div class="navbar-header">
                    <div class="d-flex">
                        <div class="navbar-brand-box horizontal-logo">
                            <a href="/Admin/Dashboard" class="logo logo-dark">
                                Apple Store
                            </a>
                        </div>

                        <form class="app-search d-none d-md-block">
                            <div class="position-relative">
                                <input type="text" class="form-control" placeholder="Search..." autocomplete="off" id="search-options" value="">
                                <span class="mdi mdi-magnify search-widget-icon"></span>
                                <span class="mdi mdi-close-circle search-widget-icon search-widget-icon-close d-none" id="search-close-options"></span>
                            </div>
                        </form>
                    </div>

                    <div class="d-flex align-items-center">
                        <img class="me-2 rounded" height="18" src="https://img.icons8.com/color/48/vietnam.png" alt="vietnam" />
                        <div class="ms-1 header-item d-none d-sm-flex">
                            <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle" data-toggle="fullscreen">
                                <i class='bx bx-fullscreen fs-22'></i>
                            </button>
                        </div>
                        <div class="dropdown ms-sm-3 header-item topbar-user">
                            <button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="d-flex align-items-center">
                                    <img class="rounded-circle header-profile-user" src="@Url.Content("~/images/users/avatar-3.jpg")" alt="Header Avatar">
                                    <span class="text-start ms-xl-2">
                                        <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">@Context.Session.GetString("Username")</span>
                                        <span class="d-none d-xl-block ms-1 fs-12 text-muted user-name-sub-text">Admin</span>
                                    </span>
                                </span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-end">
                                <!-- item-->
                                <h6 class="dropdown-header">Welcome Anna!</h6>
                                <a class="dropdown-item" href="/"> <span class="align-middle">Về trang chủ</span></a>
                                <a class="dropdown-item" href="/Account/Logout"><i class="mdi mdi-logout text-muted fs-16 align-middle me-1"></i> <span class="align-middle" data-key="t-logout">Đăng xuất</span></a>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </header>

        
        <div class="app-menu navbar-menu bg-dark">
            <!-- LOGO -->
            <div class="navbar-brand-box">
                <a asp-action="Index" asp-controller="Dashboard" class="logo logo-dark ">
					<h2 class="text-white pt-4">Apple Store</h2>
                </a>
                <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
                    <i class="ri-record-circle-line"></i>
                </button>
            </div>

            <div id="scrollbar">
                <div class="container-fluid">

                    <div id="two-column-menu">
                    </div>
                    <ul class="navbar-nav" id="navbar-nav">
                        <li class="menu-title"><span data-key="t-menu">Menu</span></li>
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-action="Index" class="nav-link" asp-controller="Dashboard">
                                <i class="ri-dashboard-2-line"></i> <span class="text-white">Dashboards</span>
                            </a>

                        </li> <!-- end Dashboard Menu -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-action="Index" class="nav-link" asp-controller="Product" >
                                <i class="ri-apps-2-line"></i> <span class="text-white">Sản phẩm</span>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-action="Index" class="nav-link" asp-controller="Category">
                                <i class="ri-layout-3-line"></i> <span class="text-white">Danh mục</span>
                            </a>

                        </li> <!-- end Dashboard Menu -->
                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-action="Index" class="nav-link" asp-controller="Account">
                                <i class="ri-account-circle-line"></i> <span class="text-white">Tài khoản</span>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a class="nav-link menu-link" asp-action="Index" class="nav-link" asp-controller="Order" >
                                <i class="ri-pages-line"></i> <span class="text-white">Đơn hàng</span>
                            </a>

                        </li>

                    </ul>
                </div>
                <!-- Sidebar -->
            </div>

            <div class="sidebar-background"></div>
        </div>
        <div class="vertical-overlay"></div>

        <div class="main-content">

            <div class="page-content">
				<div class="container-fluid">
					@RenderBody()
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <script>document.write(new Date().getFullYear())</script> © AppleStore.
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end d-none d-sm-block">
                                Design & Develop by Themesbrand
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
        <i class="ri-arrow-up-line"></i>
    </button>

    <script>
        window.onload = function() {
            var successMessage = '@TempData["success"]';
            var errorMessage = '@TempData["error"]';

            var toastBody = document.getElementById('toast-body');
            var toastElement = document.getElementById('liveToast');

            if (successMessage) {
                toastBody.innerHTML = successMessage;
                toastElement.classList.add('bg-success'); // Thêm màu xanh cho thông báo thành công
                var toast = new bootstrap.Toast(toastElement);
                toast.show();
            } else if (errorMessage) {
                toastBody.innerHTML = errorMessage;
                toastElement.classList.add('bg-danger'); // Thêm màu đỏ cho thông báo lỗi
                var toast = new bootstrap.Toast(toastElement);
                toast.show();
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <!-- Thêm Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @RenderSection("Scripts", false)
    <!-- JAVASCRIPT -->
    <script src="@Url.Content("~/libs/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/libs/simplebar/simplebar.min.js")"></script>
    <script src="@Url.Content("~/libs/node-waves/waves.min.js")"></script>
    <script src="@Url.Content("~/libs/feather-icons/feather.min.js")"></script>
    <script src="@Url.Content("~/js/pages/plugins/lord-icon-2.1.0.js")"></script>
    <script src="@Url.Content("~/js/plugins.js")"></script>
    <script src="@Url.Content("~/libs/@ckeditor/ckeditor5-build-classic/build/ckeditor.js")"></script>
    <script src="@Url.Content("~/libs/quill/quill.min.js")"></script>
    <!-- apexcharts -->
    <script src="@Url.Content("~/libs/apexcharts/apexcharts.min.js")"></script>

    <!-- Vector map-->
    <script src="@Url.Content("~/libs/jsvectormap/js/jsvectormap.min.js")"></script>
    <script src="@Url.Content("~/libs/jsvectormap/maps/world-merc.js")"></script>

    <!--Swiper slider js-->
    <script src="@Url.Content("~/libs/swiper/swiper-bundle.min.js")"></script>

    <!-- Dashboard init -->
    <script src="@Url.Content("~/wwwroot/js/pages/dashboard-ecommerce.init.js")"></script>

    <!-- App js -->
    <script src="@Url.Content("~/js/app.js")"></script>
    <script src="@Url.Content("~/js/customstart.js")"></script>
    <script src="@Url.Content("~/js/pages/form-editor.init.js")"></script>
    
    
</body>
</html>
